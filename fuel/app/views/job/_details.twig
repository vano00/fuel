<h2>{{ job.title }}</h2>
<p>
	{{ job.intro }}</p>

	<h3>Overview:</h3>
	<p>{{ job.overview }}</p>

	<h3>Main tasks:</h3>
	<p>{{ job.main_tasks }}</p>

	<h3>Profile:</h3>
	<p>{{ job.profile }}</p>

	<h3>We offer:</h3>
	<p>{{ job.we_offer }}</p>

	<h3>Place of work:</h3>
	<p>{{ job.t_city.name }}, {{ job.t_city.t_country.name }}</p>

	<h3>Start date:</h3>
	<p>{{ job.start_date }}</p>

	<h3>Type of contract:</h3>
	<p>{{ job.type_of_contract }}</p>

	<h3>Activity rate:</h3>
	<p>{{ job.activity_rate }}</p>

	{% if job.reference %}
	<p><h3>Reference:</h3>
	{{ job.reference }}</p>
	{% endif %}

	<h3>More info:</h3>
	{{ job.more_info }}</p>
<hr>
<p>
	{% if auth.user.group == 'Administrators' %}  
	{{ html_anchor('admin/job/edit/' ~ job.id ~ '', 'Edit', {'class':'btn btn-success'}) }} |
	{% endif %}
	{{ html_anchor('' ~ actions.back.url ~ '','' ~ actions.back.label ~ '', {'class':'btn btn-primary'}) }}
</p>