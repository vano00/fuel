<h2>Login</h2>
<div class="row">
	{{ form_open() }}
	<div class="col-md-3">
		<div class="form-group">
			{{ form_label('Email or Username:', 'username') }}
			{{ form_input('username', input_post('username'), {'class':'form-control', 'placeholder':'Email or Username', 'autofocus':'autofocus'}) }}
		</div>
		<div class="form-group">
			{{ form_label('Password:', 'password') }}
			{{ form_password('password', null, {'class':'form-control', 'placeholder':'Password'}) }}
		</div>
		<div class="checkbox">
			{{ form_checkbox('remember_me', 'Remember Me') }}
			{{ form_label('Remember me', 'remember_me') }}
		</div>
		<div class="actions">
			{{ form_submit('submit', 'Login', {'class':'btn btn-lg btn-primary btn-block'}) }}
		</div>	
	</div>
	{{ form_close() }}
</div>
<br>
<div class="row">
	<div class="col-md-12">
		<p><a href="auth/create_account"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Create an account</a></p>
		<p><a href="auth/reset_password">Forgot password?</a></p>
	</div>
</div>